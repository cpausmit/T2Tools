#!/bin/bash -f
#===================================================================================================
# Interface to execute a script on the server as globus ticket mapped user.
#
#                                                                         v0.0 C.Paus (Aug 00, 2012)
#===================================================================================================
export X509_USER_PROXY=`voms-proxy-info -path`
GATEWAY=$T2TOOLS_SERVER                                            # GATEWAY=t2bat0210.cmsaf.mit.edu
REMOTE_TICKET=${X509_USER_PROXY}.$$
SCRIPT=$1

# always make a little script out of it
echo "#!/bin/bash"        > sc.$$
echo "env |grep GLEXEC " >> sc.$$
echo "$*"                >> sc.$$
SCRIPT=sc.$$

# Make sure it is executable
chmod 755 $SCRIPT

# Copy ticket and script
scp -q $X509_USER_PROXY $TIER2_USER@${GATEWAY}:$REMOTE_TICKET 2> /dev/null
scp -q $SCRIPT          $TIER2_USER@${GATEWAY}:/tmp/          2> /dev/null

# Execute the script
ssh $TIER2_USER@${GATEWAY} \
  "export GLEXEC_CLIENT_CERT=$REMOTE_TICKET; export X509_USER_PROXY=$REMOTE_TICKET; /usr/sbin/glexec /tmp/$SCRIPT; echo \"RC: \$?\""
# the RC is added so one could trap the return code for the internal command.

# Cleanup remotely
ssh $TIER2_USER@${GATEWAY} "rm /tmp/$SCRIPT $REMOTE_TICKET"

# Cleanup locally
if [ -e sc.$$ ]
then
  rm sc.$$
fi

exit 0
